
<%= form_tag movies_path, :method => 'get', :id => "movies_search" do %>
	<%= hidden_field_tag :direction, params[:direction] %>
	<%= hidden_field_tag :sort, params[:sort] %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :title => nil %>
  </p>
<% end %>

<h3>Movies</h3>
  <table class="table table-striped">
    <tr>
      <th><%= sortable "title" %></th>
      <th><%= sortable "release_date" %></th>
      <th><%= sortable "genres" %></th>
     </tr>
	<% @movies.each do |movie| %>
    <tr>
      <td> <%= link_to(image_tag(movie.mob_poster_url), new_movie_review_path(movie) )%> <%=link_to(movie.title, new_movie_review_path(movie))%> </td>
      <td> <%= movie.release_date.strftime("%B %e, %Y") %> </td>
      <td> <%= movie.genres %> </td>
    </tr>
    <% end %>
  </table>

  <%= will_paginate @movies %> 
